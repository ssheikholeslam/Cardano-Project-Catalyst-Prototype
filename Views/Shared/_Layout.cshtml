    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/campaign-v2/ideascale-v4-responsive.css" />
    <link rel="stylesheet" href="~/css/mediaelementplayer.min.css" />
    <link rel="stylesheet" href="~/css/panel.css" />
    <link rel="stylesheet" href="~/css/panel-custom-pages.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/ideascale-ui/ideascale-ui.css" />
    <link rel="stylesheet" href="~/lib/flatpickr/flatpickr.css" />
    <link rel="stylesheet" href="~/lib/ichord/css/jquery.atwho.css" />
    <link rel="stylesheet" href="~/lib/markdown/medium-editor.min.css" />
